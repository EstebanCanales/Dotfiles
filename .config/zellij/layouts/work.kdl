layout {
    tab name="nvim" focus=true {
        pane
    }

    tab name="shell" {
        pane
    }

    default_tab_template {
        pane size=1 borderless=true {
            plugin location="file:~/.config/zellij/plugins/zjstatus.wasm" {
                format_left   "{mode} #[fg=#F5C2E7,bold]{session}{tabs}"
                format_right  "{command_git_branch} {datetime}"
                format_space  ""

                border_enabled  "false"
                border_char     "â”€"
                border_format   "#[fg=#F2CDCD]{char}"
                border_position "top"

                hide_frame_for_single_pane "true"

                mode_normal  "#[bg=#F5C2E7] "
                mode_tmux    "#[bg=#D9E0EE] "

                tab_normal   "#[fg=#C7D5E0] {name} "
                tab_active   "#[fg=#F28C8C,bold,italic] {name} "

                command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
                command_git_branch_format      "#[fg=#C7D5E0] {stdout} "
                command_git_branch_interval    "10"
                command_git_branch_rendermode  "static"

                datetime        "#[fg=#F2CDCD,bold] {format} "
                datetime_format "%A, %d %b %Y %H:%M"
                datetime_timezone "Europe/Berlin"
            }
        }

        children

        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }
}
